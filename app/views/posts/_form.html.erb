<%= form_for post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :content %>
  <%= f.text_area :content %><br>

  <%= f.label :category_ids, "Category" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>

  <%= f.fields_for :categories, post.categories.build do |category| %>
    <%= category.label :name, "New Category" %>
    <%= category.text_field :name %><br>
  <% end %>

  <%= f.submit %>
<% end %>
